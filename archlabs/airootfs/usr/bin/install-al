#!/usr/bin/env bash

# kill any running installers
RUNNING=$(grep 'archlabs-installer' <<< "$(pgrep -a 'sudo')")
while read -r pid; do
    sudo kill "$pid"
done <<< "$(awk '{print $1}' <<< "$RUNNING")"

termite --class="archlabs-installer" --title="ArchLabs Installer" \
    --exec="sudo /archlabs-installer/archlabs-installer $@" &
